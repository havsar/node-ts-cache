{
  "compilerOptions": {
    "target": "es2017",
    "declaration": true,
    "strict": true,
    "module": "esnext",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "emitDecoratorMetadata": true,
    "lib": [
      "es2015"
    ],
    "sourceMap": true,
    "experimentalDecorators": true,
    "allowJs": false,
    "outDir": "./dist"
  },
  "include": [
    "ts-cache/src"
  ],
  "compileOnSave": true
}

