{
    "compilerOptions": {
        "target": "ES5",
        "module": "CommonJS",
        "moduleResolution": "Node",
        "noEmitOnError": true,
        "allowUnreachableCode": false,
        "allowUnusedLabels": false,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "emitDecoratorMetadata": true,
        "outDir": "./dist",
        "strict": true,
        "lib": ["ES2015"],
        "sourceMap": true,
        "experimentalDecorators": true,
        "allowJs": false,
        "declaration": true
    },
    "include": ["./src"],
    "exclude": ["node_modules"],
    "compileOnSave": false
}
